<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/co8_syr"
    android:orientation="vertical"
    tools:context="com.intfocus.yonghuitest.dashboard.mine.FeedbackActivity">

    <RelativeLayout
        android:id="@+id/rl_feedback_actionBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:background="@color/co10_syr"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_feedback_banner_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/nav_back_black"/>

        <TextView
            android:id="@+id/banner_feedback_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="问题反馈"
            android:textColor="@color/co6_syr"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/co10_syr"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_feedback_suggestion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题修改及改进意见:"
            android:textColor="@color/co3_syr"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_feedback_suggestion_title"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请描述您遇到的问题(1-500字)"
            android:textColor="@color/co3_syr"
            android:textColorHint="@color/co4_syr"
            android:textSize="15sp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110.5dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/co8_syr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="页面截图(最多3张):"
            android:textColor="@color/co3_syr"
            android:textSize="15sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_feedback_page_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="您的鞭策是我们进步的源泉，感谢您的宝贵意见!"/>

    <TextView
        android:id="@+id/btn_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/color_btn_forget_pwd_submit_background"
        android:gravity="center"
        android:onClick="onClick"
        android:clickable="true"
        android:text="提交"
        android:textColor="@color/co1_syr"
        android:textSize="16sp"/>
</LinearLayout>
