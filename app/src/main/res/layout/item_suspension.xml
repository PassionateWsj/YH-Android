<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fl_suspension"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_medium"
        android:background="@drawable/shape_table_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unit_table_header"
            style="@style/tv_unit_chart_m"
            android:layout_width="100dp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/space_default"
            android:paddingRight="@dimen/space_default"
            android:textAlignment="center"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/co9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.intfocus.yh_android.general.view.TableHorizontalScrollView
                android:id="@+id/thscroll_unit_table_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_unit_table_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>
            </com.intfocus.yh_android.general.view.TableHorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
