<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerVertical="true">

    <CheckBox
        android:id="@+id/cb_item_attention_list_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:text="+关注"
        android:textColor="@color/color_btn_attention"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_toLeftOf="@id/cb_item_attention_list_check"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_attention_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="车厘子"
            android:textColor="@color/black_51_51_51"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_item_attention_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_attention_list_name"
            android:gravity="center"
            android:text="00122344"
            android:textColor="@color/co3_syr"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>