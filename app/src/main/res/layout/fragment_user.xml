<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_line_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            style="@style/NullDivider"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"/>

        <include layout="@layout/item_mine_user_top"/>

        <View
            style="@style/SmallDivider"
            android:layout_height="1px"/>

        <!--单值-->
        <include layout="@layout/items_single_value"></include>

        <View
            style="@style/NullDivider"
            android:layout_height="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_user_location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/co10_syr">

            <ImageView
                android:id="@+id/iv_mine_user_group"
                style="@style/iv_mine_user_list"
                android:src="@drawable/icon_section"/>

            <TextView
                android:id="@+id/tv_mine_user_group"
                style="@style/tv_mine_user_list_left"
                android:layout_toRightOf="@+id/iv_mine_user_group"
                android:text="@string/tip_attribution_department"/>

            <ImageView
                android:id="@+id/iv_mine_user_group_arrow"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/btn_more"/>

            <TextView
                android:id="@+id/tv_mine_user_group_value"
                style="@style/tv_mine_user_list_right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/iv_mine_user_group_arrow"
                android:layout_toRightOf="@+id/tv_mine_user_group"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:text="YONGUED"
                android:textAlignment="textEnd"/>
        </RelativeLayout>

        <View style="@style/NarrowSmallDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/co10_syr">

            <ImageView
                android:id="@+id/iv_mine_user_num"
                style="@style/iv_mine_user_list"
                android:src="@drawable/login_jobno"/>

            <TextView
                android:id="@+id/tv_mine_user_num"
                style="@style/tv_mine_user_list_left"
                android:layout_toRightOf="@id/iv_mine_user_num"
                android:text="工号"/>

            <TextView
                android:id="@+id/tv_mine_user_num_value"
                style="@style/tv_mine_user_list_right"
                android:layout_marginRight="30dp"
                android:text=""
                android:textAlignment="textEnd"/>
        </RelativeLayout>

        <include layout="@layout/yh_custom_user"/>

        <View
            style="@style/NullDivider"
            android:layout_height="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/co10_syr">

            <TextView
                android:id="@+id/tv_mine_user_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出登录"
                android:textColor="#f56758"
                android:textSize="16sp"/>

        </RelativeLayout>

        <View
            style="@style/NullDivider"
            android:layout_height="10dp"/>
    </LinearLayout>
</ScrollView>

