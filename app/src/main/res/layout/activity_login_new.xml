<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:id="@+id/ll_login_result_notice"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_login_result_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_notice_login_success"
            android:gravity="center"
            android:text="登陆成功"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:id="@+id/linearUsernameBelowLine"
        android:layout_width="245dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@color/co9_syr"/>

    <LinearLayout
        android:id="@+id/linearUsername"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearUsernameBelowLine"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_name"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="员工号"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/co3_syr"
            android:textColorHint="@color/co4_syr"
            android:textCursorDrawable="@drawable/login_edit_cursor"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_etUsername_clear"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_empty"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/loginLog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/linearUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="@drawable/logo"/>


    <LinearLayout
        android:id="@+id/linearPassword"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearUsernameBelowLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_password"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/login_password_placeholder"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/co3_syr"
            android:textColorHint="@color/co4_syr"
            android:textCursorDrawable="@drawable/login_edit_cursor"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_etPassword_clear"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_empty"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:id="@+id/linearPasswordBelowLine"
        android:layout_width="245dp"
        android:layout_height="1dp"
        android:layout_below="@+id/linearPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@color/co9_syr"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_below="@id/linearPasswordBelowLine"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_login"
        android:onClick="actionSubmit"
        android:paddingBottom="10dp"
        android:text="@string/login_submit"
        android:textColor="@color/color_btn_login_background"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forgetPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/forgetPassword"
            android:textColor="@color/co4_syr"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="14dp"
            android:background="@color/co9_syr"/>

        <TextView
            android:id="@+id/applyRegistTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="申请注册"
            android:textColor="@color/co4_syr"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>
