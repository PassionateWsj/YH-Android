<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <android.support.v7.widget.CardView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="3dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:id="@+id/rl_item_collection_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_item_collection_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"
                android:text="@string/status_item_collection_list_draft"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_item_collection_list_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_item_collection_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_item_collection_list_title_label"
                android:layout_toStartOf="@id/tv_item_collection_list_status"
                android:text="暂无标题"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_item_collection_list_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/tv_item_collection_list_status"
                android:text=""
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_item_collection_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_item_collection_list_time"
                android:layout_below="@id/tv_item_collection_list_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/tv_item_collection_list_status"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textSize="10sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/co11_syr"
            android:gravity="center"
            android:padding="20dp"
            android:text="删除"
            android:textColor="@color/co10_syr"/>

        <TextView
            android:id="@+id/right_menu_sync"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/co1_syr"
            android:gravity="center"
            android:padding="20dp"
            android:text="同步"
            android:textColor="@color/co10_syr"/>
    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>