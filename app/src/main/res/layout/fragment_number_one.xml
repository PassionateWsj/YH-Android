<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rl_kpi_number_one"
              android:layout_width="match_parent"
              android:layout_height="193dp"
              android:background="@drawable/banner_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_number_one_tub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="28dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number_one_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.6"
            android:text="昨日总销售额"
            android:textColor="@color/co10_syr"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_number_one_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.6"
            android:text="33.56"
            android:textColor="@color/co10_syr"
            android:textSize="13sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/tv_number_one_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="18.23"
            android:textColor="#00648e"
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/tv_number_one_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_number_one_number"
            android:layout_toRightOf="@id/tv_number_one_number"
            android:text="(万元)"
            android:textColor="@color/co10_syr"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="28dp">

        <TextView
            android:id="@+id/tv_number_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="小店实时销售额"
            android:textColor="@color/co10_syr"
            android:textSize="16sp"/>
    </RelativeLayout>

</LinearLayout>
