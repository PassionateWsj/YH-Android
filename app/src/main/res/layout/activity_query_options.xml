<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.intfocus.yh_android.subject.QueryOptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_query_options_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="17dp"
            android:clickable="true"
            android:src="@drawable/icon_selector_query_option_back"/>

        <TextView
            android:id="@+id/tv_search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center"
            android:lines="1"
            android:text="查询选项"
            android:textColor="@color/query_options_title_color"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/ibtn_query_option_history"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="17dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/icon_selector_query_option_history"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/query_options_dividing_line_color"/>

    <ScrollView
        android:id="@+id/sv_query_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/query_options_scroll_view_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="选择查询信息"
                android:textColor="@color/query_options_title_color"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/query_options_grouping_background">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="22.5dp"
                    android:background="#A2CF00"/>

                <TextView
                    android:id="@+id/tv_query_option_group_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="18dp"
                    android:text="分组一"
                    android:textColor="@color/query_options_grouping_text_color"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/query_options_grouping_background">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="22.5dp"
                    android:background="#A2CF00"/>

                <TextView
                    android:id="@+id/tv_query_option_group_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="18dp"
                    android:text="分组二"
                    android:textColor="@color/query_options_grouping_text_color"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/ll_query_option_text_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="50dp"
                    android:layout_below="@id/tv_query_option_group_two">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:text="文本输入框"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">

                        <EditText
                            android:id="@+id/et_query_option_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:hint="请输入"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_scan_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_query_option_text_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:text="扫一扫"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">


                        <ImageView
                            android:id="@+id/ibtn_query_option_scan"
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/icon_query_option_scan"/>

                        <EditText
                            android:id="@+id/et_query_option_scan_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@id/ibtn_query_option_scan"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:hint="请输入"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="12sp"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_radio_box_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll_query_option_scan_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:text="单选按钮"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center">

                        <RadioGroup
                            android:id="@+id/rg_query_option"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:button="@drawable/icon_selector_query_option_radio_button"
                                android:paddingLeft="10dp"
                                android:text="选项1"
                                android:textColor="@color/query_options_grouping_title_color"/>

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/icon_selector_query_option_radio_button"
                                android:paddingLeft="10dp"
                                android:text="选项2"
                                android:textColor="@color/query_options_grouping_title_color"/>

                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_check_box_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_query_option_radio_box_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:text="多选按钮"/>

                    <LinearLayout
                        android:id="@+id/ll_query_option_check_box_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_radio_box_spinner_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_query_option_check_box_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:text="单选下拉框"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/icon_down_arrow"/>

                        <ExpandableListView
                            android:id="@+id/elv_query_option_radio_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="44dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_check_box_drop_down_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_query_option_radio_box_spinner_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:text="多选下拉框"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/icon_down_arrow"/>

                        <ExpandableListView
                            android:id="@+id/elv_query_option_check_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="44dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_radio_list_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_query_option_check_box_drop_down_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:text="单选列表"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/query_options_text_background"
                        android:paddingLeft="36dp">

                        <ImageView
                            android:id="@+id/iv_query_option_radio_list_search"
                            android:layout_width="22dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/icon_query_option_search_pressed"/>

                        <ListView
                            android:id="@+id/lv_query_option_radio_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/iv_query_option_radio_list_search"
                            android:divider="#00000000"
                            android:scrollbars="none"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_time_select_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_query_option_radio_list_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:text="时间选择框"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">


                        <ImageButton
                            android:id="@+id/ibtn_query_time_select"
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:background="#00000000"
                            android:src="@drawable/icon_selector_query_option_calender"/>

                        <TextView
                            android:id="@+id/tv_query_option_time_select"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@id/ibtn_query_time_select"
                            android:gravity="center_vertical"
                            android:hint="未选择"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_start_time_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_query_option_time_select_input">

                    <TextView
                        style="@style/query_options_group_title_item"
                        android:text="时间起止"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">


                        <ImageButton
                            android:id="@+id/ibtn_query_start_time_select"
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:background="#00000000"
                            android:src="@drawable/icon_selector_query_option_calender"/>

                        <TextView
                            android:id="@+id/tv_query_option_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@id/ibtn_query_start_time_select"
                            android:gravity="center_vertical"
                            android:hint="请输入起始时间"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_query_option_end_time_input"
                    style="@style/ll_query_option_group_item"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_query_option_start_time_input"
                    android:layout_marginBottom="18dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="78dp"
                        android:background="@drawable/select_query_option_input_box_bg"
                        android:paddingLeft="36dp">


                        <ImageButton
                            android:id="@+id/ibtn_query_end_time_select"
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:background="#00000000"
                            android:src="@drawable/icon_selector_query_option_calender"/>

                        <TextView
                            android:id="@+id/tv_query_option_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@id/ibtn_query_end_time_select"
                            android:gravity="center_vertical"
                            android:hint="请输入结束时间"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_query_option_submit"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="19dp"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/query_option_submit_color"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
