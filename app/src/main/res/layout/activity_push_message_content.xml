<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/co10_syr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/co10_syr">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:onClick="onClick"
            android:src="@drawable/nav_back"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/BannerTitle"
            android:layout_centerInParent="true"
            android:text="消息详情"
            android:textColor="@color/co6_syr"
            android:textSize="17sp"/>
    </RelativeLayout>

    <View
        style="@style/SmallDivider"
        android:layout_height="0.5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tv_push_message_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="第二集群客流仪表盘"
                android:textColor="@color/co6_syr"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_push_message_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_push_message_content_title"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_push_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="8dp"
                android:text="永辉应用团队：各位小伙伴们，永辉生意人本次发布了一个新版本，主要的更新如下，可以帮你更好的使用生意人哦"
                android:layout_below="@+id/tv_push_message_content_time"
                android:textColor="@color/co6_syr"
                android:textSize="14sp"/>
        </RelativeLayout>

    </ScrollView>


</LinearLayout>
