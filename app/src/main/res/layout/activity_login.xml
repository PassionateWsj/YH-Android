<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center_horizontal"
    tools:context=".login.LoginActivity">

    <View
        android:id="@+id/linearUsernameBelowLine"
        android:layout_width="245dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@color/co9_syr"/>

    <LinearLayout
        android:id="@+id/linearUsername"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearUsernameBelowLine"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_name"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_login_user"
            android:maxLines="1"
            android:textColor="@color/co3_syr"
            android:textColorHint="@color/co4_syr"
            android:textCursorDrawable="@drawable/login_edit_cursor"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/ll_etUsername_clear"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_empty"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/loginLog"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_above="@id/linearUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:src="@drawable/logo"/>


    <LinearLayout
        android:id="@+id/linearPassword"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearUsernameBelowLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_password"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/login_password_placeholder"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/co3_syr"
            android:textColorHint="@color/co4_syr"
            android:textCursorDrawable="@drawable/login_edit_cursor"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/ll_etPassword_clear"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="3dp"
                android:src="@drawable/btn_empty"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/linearPasswordBelowLine"
        android:layout_width="245dp"
        android:layout_height="1dp"
        android:layout_below="@+id/linearPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/co9_syr"/>

    <RelativeLayout
        android:id="@+id/ll_login_speed_pass"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearPasswordBelowLine"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/cb_login_keep_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/cb_login"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/keep_pwd"
            android:textColor="@color/co4_syr"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="245dp"
        android:layout_height="52dp"
        android:layout_below="@id/ll_login_speed_pass"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_login"
        android:paddingBottom="10dp"
        android:text="@string/login_submit"
        android:textColor="@color/color_btn_login_background"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/ll_unable_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forgetPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/forgetPassword"
            android:textColor="@color/co4_syr"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="14dp"
            android:background="@color/co9_syr"/>

        <TextView
            android:id="@+id/applyRegistTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="申请注册"
            android:textColor="@color/co4_syr"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>
