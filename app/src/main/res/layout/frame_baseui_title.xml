            android:id="@+id/ll_baseUI_title_RightView"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/nav_more"
            android:onClick="launchDropMenuActivity"
            android:orientation="horizontal"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_baseUI_title"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ll_baseUI_title_RightView"
            android:layout_toRightOf="@id/tv_baseUI_back"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="报表"/>
    </RelativeLayout>
