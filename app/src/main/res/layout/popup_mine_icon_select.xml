<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50000000">

    <LinearLayout
        android:id="@+id/ll_popup_icon_select"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentBottom="true"
        android:background="@color/co10_syr"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_camera"
            android:layout_width="match_parent"
            android:background="@drawable/color_btn_forget_pwd_submit_background"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="拍照"
                android:textColor="@color/co1_syr"
                android:textSize="16sp"/>

            <View style="@style/OptionSettingDivider"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_gallery"
            android:layout_width="match_parent"
            android:background="@drawable/color_btn_forget_pwd_submit_background"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/tv_mine_user_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="相册"
                android:textColor="@color/co1_syr"
                android:textSize="16sp"/>

            <View style="@style/OptionSettingDivider"
                android:layout_height="5dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="match_parent"
            android:background="@drawable/color_btn_forget_pwd_submit_background"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@color/co11_syr"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_popup_icon_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_popup_icon_select">
    </RelativeLayout>
</RelativeLayout>