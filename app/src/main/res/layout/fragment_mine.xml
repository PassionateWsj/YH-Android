<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        style="@style/TabLayoutTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabIndicatorHeight="0dp" />

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tab_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="@drawable/background11_radius_boder_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <View
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="@drawable/background2_radius_boder_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <View
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="@drawable/background1_radius_boder_1" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_line" />

</RelativeLayout>
