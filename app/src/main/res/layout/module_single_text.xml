<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_single_text_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="标题"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/iv_single_text_element"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_single_text_title"/>

    <EditText
        android:id="@+id/et_single_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/iv_single_text_element"
        android:layout_below="@id/tv_single_text_title"
        android:background="@drawable/background_item_fillet"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:singleLine="true"/>
</RelativeLayout>
