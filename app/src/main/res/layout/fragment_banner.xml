<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/space_default"
    android:background="@drawable/shadow_banner_border"
    tools:context="com.intfocus.yonghuitest.ui.ModularTwo_UnitBannerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_medium"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_default">

        <TextView
            android:id="@+id/tv_mdrp_unit_banner_title"
            style="@style/tv_mererMinTitle_stytle"
            android:text="title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mdrp_unit_banner_time"
            style="@style/tv_mererMinTitle_stytle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/space_default"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:text="time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_mdrp_unit_banner_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <ImageButton
            android:id="@+id/imgb_mdrp_unit_banner_info"
            android:layout_width="@dimen/size_default"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="@dimen/space_default"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@mipmap/btn_inf" />

    </LinearLayout>
</FrameLayout>